{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
    "baseUrl": ".",
    "paths": {
      "$exporter": ["src/exporter/index"],
      "$exporter/type": ["src/exporter/type"],
      "$exporter/asset": ["src/exporter/asset"],
      "$exporter/component": ["src/exporter/component"],
      "$exporter/screen": ["src/exporter/screen"],
      "$exporter/backend": ["src/exporter/backend"],
      "$exporter/redux": ["src/exporter/redux"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
